@keyframes color_change {
	from { color: mainColor }
	to { color: #808080 }
}

.headers
	width: 99%;
	text-align: center;
	margin: 0 auto;
	height 35px
	div
		color: #808080;
		padding: 10px 0;
		float: left;
		width: 33%;

.songs
	min-width: 800px;
	margin: 0 auto;
	color: white;
	text-align: center;


	.song
		border-bottom: 1px solid #3C3C3C;
		transition: background-color 0.3s;
		padding: 5px

		div:first-child
			background-image: url('assets/images/plusIcon.png');
			width: 32px;
			background-size: 90%;
			height: 32px;
			background-repeat: no-repeat;
			-webkit-filter: grayscale(100%)
			&:hover
				-webkit-filter: grayscale(0%)

			&.favorited
				transform: rotateZ(45deg);

		div:nth-child(2)
			text-align: left;
			position: relative;
			left: 25px;

		.songAlbum:hover
			color: secondaryColor;
			cursor: pointer;


		div
			display: inline-block;
			width: 30%;
			vertical-align: middle;
			overflow hidden
			text-overflow: ellipsis;
			white-space: nowrap;

		&:first-child
			border-top: 1px solid #3C3C3C;


		&:hover
			background-color: #10719E;
			transition: background-color 0.2s;

		&.playingNow
			color: mainColor



		&.loadingNow
			animation: color_change .5s infinite alternate;
