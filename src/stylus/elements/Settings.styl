.settingsPage
	width: 100%
	height 100%
	background-color #252527
	position absolute

	.settingsTitle
		font-size 24px
		color #CCCCCC
		margin: 0 auto;
		width: 95%;
		text-align center
		border-bottom 1px solid mainColor
		padding 5px
		-webkit-app-region drag

		.closeSettings
			position: absolute;
			right: 10px;
			top: 5px;
			color white
			font-size 24px
			width: 24px
			height: 24px
			cursor: pointer;
			-webkit-app-region: no-drag;
			&:hover
				color secondaryColor

	.field
		text-align center
		margin 10px

		&:last-child
			position relative
			top 200px

			button
				background-color: black;
				border: none;
				padding: 10px 80px;
				color: mainColor;
				font-size: 16px;
				box-shadow: 0 0 1px 0px mainColor;
				transition 0.2s background-color
				&:hover
					background-color: #0D1E25

		label
			color white
			display block
			font-size 16px
			font-family Arial
			margin-bottom 5px

		input
			border none
			background-color black
			padding 5px
			color white
