.footer
	position: absolute;
	bottom: 0;
	z-index: 5;
	width: 100%;
	background-color: #2d2d2f;
	height: 70px;
	left: 0;
	overflow: hidden;


	.playPauseButton 
		height: 80%;
		margin-top: 7.5px;
		// -webkit-filter: invert(50%);
		width: 60px;
		display: inline-block;
		-webkit-filter: grayscale(100%);
		transition: -webkit-filter 0.2s

		div 
			height: 100%;
			background-repeat: no-repeat;
			background-position: center;

		//Icons made by "http://www.freepik.com" and is licensed by CC 3.0
		.play 
			background-image: url('assets/images/playIcon.png');
			background-size: 90%;

		//Icons made by "http://www.freepik.com" and is licensed by CC 3.0
		.pause 
			background-image: url('assets/images/pauseIcon.png');
			background-size: 90%;

		&:hover 
			-webkit-filter: grayscale(0%);

	.nextSong, .previousSong
		height: 80%;
		margin-top: 7.5px;
		// -webkit-filter: invert(50%);
		width: 20px;
		display: inline-block;
		-webkit-filter: grayscale(100%);
		transition: -webkit-filter 0.2s
		div
			height: 100%;
			background-repeat: no-repeat;
			background-position: center;
			//Icons made by "http://www.freepik.com" and is licensed by CC 3.0
			background-image: url('assets/images/nextIcon.png');
			background-size: 100%;


		&:hover 
			-webkit-filter: grayscale(0%);
	
	.previousSong
		margin-left 10px
		transform: rotateY(180deg)

	.volumeArea 
		position: relative;
		cursor: pointer;
		width: 30%;
		right: 10px;
		top: 25px;
		float: right;
		background-color: black;
		height: 20px;

	.volumeBar 
		display:block;
		height:20px;
		background-color:#03a9f4;
		z-index:10;
		width: 90%;
